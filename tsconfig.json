{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "CommonJS",
    "sourceMap": true,
    "rootDir": "./src",   
    "outDir": "dist",
    "strict": true,
    "typeRoots": [ "../node_modules/@types" ],
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true, 
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noUnusedParameters": true 
    },
  "include": ["./src/**/*"]
}
